                    android:gravity="center_horizontal" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/framePreset10"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1">

                <ImageView
                    android:id="@+id/imagePreset10"
                    android:layout_width="fill_parent"
