                    android:gravity="center_horizontal" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/framePreset11"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1">

                <ImageView
                    android:id="@+id/imagePreset11"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/red_guitar_icon"
                    android:tag="10" />

                <TextView
                    android:id="@+id/preset11Text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/image_textview_margin"
                    android:gravity="center_horizontal" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/framePreset12"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1">

                <ImageView
                    android:id="@+id/imagePreset12"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/red_guitar_icon"
                    android:tag="11" />

                <TextView
                    android:id="@+id/preset12Text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/image_textview_margin"
                    android:gravity="center_horizontal" />

            </FrameLayout>


        </android.widget.GridLayout>

    </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>